%h1 Listing pages

%table
  %tr
    %th Title
    %th
    %th
    %th

  - @pages.each do |page|
    %tr
      %td= page.title
      - unless page.sub_instance.short_name=="default" and not current_user.is_root?
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Page', new_page_path

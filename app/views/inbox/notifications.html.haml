#hp_intro= @page_title
%p
  - if @notifications.any?
    = render :partial => "shared/paginate_with_feed", :locals => {:collection => @notifications}
    #activities
      - for notification in @notifications
        = render :partial => "notifications/show", :locals => {:notification => notification}
    %p
      = foundation_paginate(@notifications)
  - else
    = tr("You have no notifications","here")
- if @user.errors.any?
  .error_messages
    %h2
      = tr("Errors","here")
    %ul
      - @user.errors.full_messages.each do |msg|
        %li
          = msg
#hp_intro= @page_title
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.hidden_field :reset_password_token
  = f.label :password, tr("New password", "view/passwords/edit")
  %br
  = f.password_field :password
  %br
  = f.label :password_confirmation, tr("Repeat new password", "view/passwords/edit")
  %br
  = f.password_field :password_confirmation
  = f.hidden_field :sub_instance_id, :value => SubInstance.current.id
  %br
  = f.submit tr("Change password", "view/passwords/edit")
